quest collect_quest_lv85 begin
	state start begin
	end

	state run begin
		when login or levelup with pc.get_level() >= 85 begin
			set_state(information)
		end
	end

	state information begin
		when letter begin
			local v = find_npc_by_vnum(20084)
			if v != 0 then
				target.vid("__TARGET__", v, locale_quest(508))
			end
			send_letter(locale_quest(509))
		end

		when button or info begin
			say_title(locale_quest(510))
			say(locale_quest(511))
		end

		when __TARGET__.target.click or 20084.chat.locale_quest(512) begin
			target.delete("__TARGET__")
			say_title(locale_quest(508))
			say(locale_quest(513))
			say(locale_quest(514))
			wait()
			say_title(locale_quest(515))
			say(locale_quest(516))
			wait()
			say_title(locale_quest(517))
			say(locale_quest(518))
			set_state(go_to_disciple)
			pc.setqf("duration", 0)
			pc.setqf("collect_count", 0)
			--pc.setqf("drink_drug", 0)
		end
	end

	state go_to_disciple begin
		when letter begin
			send_letter(locale_quest(519))
		end

		when button or info begin
			say_title(locale_quest(520))
			say(locale_quest(521))
			say_item_vnum(30167)
			say_reward(string.format(locale_quest(522) .. " " .. locale_quest(523), pc.getqf("collect_count")))
		end

		--[[
		when 71035.use begin
			if get_time() < pc.getqf("duration") then
				say(string.format(locale_quest(524))
				return
			end

			if pc.getqf("drink_drug") == 1 then
				say(string.format(locale_quest(525))
				return
			end

			if pc.count_item(30167) == 0 then
				say(string.format(locale_quest(526))
				return
			end

			pc.remove_item(71035, 1)
			pc.setqf("drink_drug", 1)
		end
		]]

		when 2311.kill or 2312.kill or 2313.kill or 2314.kill or 2315.kill begin
			local s = number(1, 200)
			if s == 1 then
				pc.give_item2(30167)
				send_letter(locale_quest(527))
			end
		end

		when 20084.chat.locale_quest(528) with pc.count_item(30167) > 0 begin
			if get_time() > pc.getqf("duration") or is_test_server() then
				say_title(locale_quest(529))
				say(locale_quest(530))
				pc.remove_item(30167, 1)
				pc.setqf("duration", (get_time() + (60 * 60 * 7))) -- 7 hours
				wait()

				local pass_percent
				--if pc.getqf("drink_drug") == 0 then
				if affect.get_apply_value(400) == nil then
					pass_percent = 60
				else
					pass_percent = 90
				end

				test_chat(string.format("pass percent %d", pass_percent))

				local s = number(1, 100)
				if s <= pass_percent then
					if pc.getqf("collect_count") < 39 then
						local index = pc.getqf("collect_count") + 1
						pc.setqf("collect_count", index)
						say_title(locale_quest(531))
						say(locale_quest(532))
						say(string.format(locale_quest(533) .. " " .. locale_quest(534), (40 - pc.getqf("collect_count"))))
						say(locale_quest(535))
						--pc.setqf("drink_drug", 0)
						affect.remove(400)
						return
					end

					say_title(locale_quest(536))
					say(locale_quest(537))
					pc.setqf("duration", 0)
					pc.setqf("collect_count", 0)
					--pc.setqf("drink_drug", 0)
					affect.remove(400)
					set_state(key_item)
					return
				else
					say_title(locale_quest(538))
					say(locale_quest(539))
					--pc.setqf("drink_drug", 0)
					affect.remove(400)
					return
				end
			else
				say_title(locale_quest(540))
				say(locale_quest(541))
				return
			end
		end
	end

	state key_item begin
		when letter begin
			if pc.count_item(30226) > 0 then
				local v = find_npc_by_vnum(20084)
				if v != 0 then
					target.vid("__TARGET__", v, locale_quest(540))
				end
			end
			send_letter(locale_quest(542))
		end

		when button or info begin
			if pc.count_item(30226) > 0 then
				say_title(locale_quest(543))
				say(locale_quest(544))
				return
			end

			say_title(locale_quest(545))
			say(locale_quest(546))
			say_item_vnum(30226)
			say(locale_quest(547))
		end

		when 2311.kill or 2312.kill or 2313.kill or 2314.kill or 2315.kill begin
			local s = number(1, 200)
			if s == 1 and pc.count_item(30226) == 0 then
				pc.give_item2(30226)
				send_letter(locale_quest(548))
			end
		end

		when __TARGET__.target.click or 20084.chat.locale_quest(549) with pc.count_item(30226) > 0 begin
			target.delete("__TARGET__")
			say_title(locale_quest(550))
			say(locale_quest(551))
			pc.remove_item(30226, 1)
			set_state(__reward)
		end
	end

	state __reward begin
		when letter begin
			local v = find_npc_by_vnum(20018)
			if v != 0 then
				target.vid("__TARGET__", v, locale_quest(553))
			end
			send_letter(locale_quest(552))
		end

		when button or info begin
			say_title(locale_quest(554))
			say(locale_quest(555))
		end

		when __TARGET__.target.click or 20018.chat.locale_quest(556) begin
			target.delete("__TARGET__")
			say_title(locale_quest(557))
			say(locale_quest(558))
			wait()
			say_title(locale_quest(557))
			say(locale_quest(559))
			say_reward(locale_quest(560))
			say_reward(locale_quest(561))
			say_reward(locale_quest(562))

			affect.add_collect_point(POINT_RESIST_WARRIOR, 10, (60 * 60 * 24 * 365 * 60)) -- 60 years
			affect.add_collect_point(POINT_RESIST_ASSASSIN, 10, (60 * 60 * 24 * 365 * 60)) -- 60 years
			affect.add_collect_point(POINT_RESIST_SURA, 10, (60 * 60 * 24 * 365 * 60)) -- 60 years
			affect.add_collect_point(POINT_RESIST_SHAMAN, 10, (60 * 60 * 24 * 365 * 60)) -- 60 years
			--affect.add_collect_point(POINT_RESIST_WOLFMAN, 10, (60 * 60 * 24 * 365 * 60)) -- 60 years
			pc.give_item2(50115)
			clear_letter()
			set_quest_state("collect_quest_lv90", "run")
			set_state(__complete)
		end
	end

	state __complete begin
	end
end
