define COLONY_GUARD_VNUM 20401 -- Colony Guard (Lycan NPC) VNUM
define UNKNOWN_STONE_VNUM 31093 -- Unknown Stone (Droppable on Monsters) VNUM
define EXP_AMOUNT_REWARD 250 -- Amount of received exp upon quest completion
define ITEM_ONE_REWARD 27001 -- ITEM_ONE (Red Potions (s)) received upon quest completion
define ITEM_ONE_AMOUNT_REWARD 10 -- Amount (x10) of received ITEM_ONE upon quest completion

quest frenzied_beasts begin
	state start begin end
	state trigger begin
		when letter begin
			send_letter(locale_quest(6357))
			local v = find_npc_by_vnum(COLONY_GUARD_VNUM)
			if 0 ~= v then
				target.vid("__TARGET__", v, locale_quest(6357))
			end
		end

		when button or info begin
			say_title(locale_quest(6357))
			say(locale_quest(6358))
		end

		when __TARGET__.target.click or COLONY_GUARD_VNUM.chat.locale_quest(6357) begin
			target.delete("__TARGET__")
			clear_letter()

			say_title(mob_name(COLONY_GUARD_VNUM))
			say()
			say(locale_quest(6359))
			set_state(investigate_wild_animals)
		end
	end

	state investigate_wild_animals begin
		when letter begin
			send_letter(locale_quest(6360))
		end

		when button or info begin
			say_title(locale_quest(6360))
			say(locale_quest(6361))
		end

		when COLONY_GUARD_VNUM.chat.locale_quest(6357) begin
			say_title(mob_name(COLONY_GUARD_VNUM))
			say(locale_quest(6362))
		end

		-- The is_pc() check is useless, Lycan will almost never be level 15 and still in the map
		-- 33% chance of drop
		when kill with npc.is_pc() == false begin
			if number(0, 3) ~= 3 then
				return
			end

			pc.give_item2(UNKNOWN_STONE_VNUM)
			say_title(locale_quest(6363))
			say(locale_quest(6407))
			set_state(back_to_the_guard)
		end
	end

	state back_to_the_guard begin
		when letter begin
			send_letter(locale_quest(6363))
			local v = find_npc_by_vnum(COLONY_GUARD_VNUM)
			if 0 ~= v then
				target.vid("__TARGET__", v, locale_quest(6363))
			end
		end

		when button or info begin
			say_title(locale_quest(6363))
			say(locale_quest(6407))
		end

		when __TARGET__.target.click or COLONY_GUARD_VNUM.chat.locale_quest(6363) begin
			target.delete("__TARGET__")
			clear_letter()

			say_title(mob_name(COLONY_GUARD_VNUM))
			say()
			say(locale_quest(6364))
			say()
			say_reward(string.format(locale_quest(5043), item_name(ITEM_ONE_REWARD),ITEM_ONE_AMOUNT_REWARD))
			say_reward(string.format(locale_quest(6882), EXP_AMOUNT_REWARD))
			pc.give_exp2(EXP_AMOUNT_REWARD)
			pc.give_item2(ITEM_ONE_REWARD, ITEM_ONE_AMOUNT_REWARD)
			pc.remove_item(UNKNOWN_STONE_VNUM, pc.count_item(UNKNOWN_STONE_VNUM))
			wait()
			set_state(__COMPLETE__)
			set_quest_state("unknown_stone", "trigger")
		end
	end

	state __COMPLETE__ begin
	end
end
