quest training_mount begin
	state start begin
		function check_list(material, pc_level, horse_level)
			if pc.count_item(material) <= 0 then
				say_npc()
				say(locale_quest(9944))
				return 0
			elseif pc.get_level() < pc_level then
				say_npc()
				say(locale_quest(9943))
				return 0
			elseif horse.get_level() < horse_level then
				say_npc()
				say(locale_quest(9976))
				return 0
			else
				return 1
			end
		end

		function extraTime(typ)
			local n = number(1, 100)
			if typ == 1 then
				if n <= 50 then
					return 86400
				elseif n <= 80 then
					return 86400 * 2
				elseif n <= 95 then
					return 86400 * 3
				else
					return 86400 * 4
				end
			elseif typ == 2 then
				if n <= 30 then
					return 0
				elseif n <= 70 then
					return 86400
				elseif n <= 90 then
					return 86400 * 2
				else
					return 86400 * 3
				end
			end
		end

		when 20349.chat.locale_quest(9946) begin
			say_npc()
			say(locale_quest(9947))
			say("")
			wait()
			say_npc()
			say(locale_quest(9948))
			say("")
			wait()
			say_npc()
			say(locale_quest(9949))
			say("")
			set_state(main_point)
		end
	end

	state main_point begin
		when 20349.chat.locale_quest(9950) begin
			say_npc()
			say(locale_quest(9951))
			say("")
			wait()
			say_npc()
			say(locale_quest(9952))
			say("")
			wait()
			say_npc()
			say(locale_quest(9953))

			local s = select(locale_quest(9954), locale_quest(9955))
			if 2 == s then
				return
			end
			if pc.count_item(50067) >= 1 or pc.count_item(50068) >= 1 then
				say_npc()
				say(locale_quest(9956))
			else
				say_npc()
				say(locale_quest(9944))
				return
			end

			local s = select(locale_quest(9958), locale_quest(9957), locale_quest(9959))
			if 1 == s then
				if training_mount.check_list(50067, 25, 11) == 1 then
					say_npc()
					say(locale_quest(9960))
				end
			elseif 2 == s then
				if training_mount.check_list(50068, 35, 20) == 1 then
					say_npc()
					say(locale_quest(9961))
				end
			elseif 3 == s then
				say_npc()
				say(locale_quest(9962))
				say("")
				return
			end
		end

		when 20349.take with
			52001 <= item.get_vnum() and item.get_vnum() <= 52005 or
			52016 <= item.get_vnum() and item.get_vnum() <= 52020 or
			52031 <= item.get_vnum() and item.get_vnum() <= 52035 or
			52046 <= item.get_vnum() and item.get_vnum() <= 52050 or
			52061 <= item.get_vnum() and item.get_vnum() <= 52065 or
			52076 <= item.get_vnum() and item.get_vnum() <= 52080 or
			52091 <= item.get_vnum() and item.get_vnum() <= 52095 or
			52106 <= item.get_vnum() and item.get_vnum() <= 52110
		begin
			if pc.is_riding() == true then
				say_npc()
				say(locale_quest(9975))
				return
			end

			if count_item_range(38100, 38102) >= 1 then
				say_npc()
				say(locale_quest(9977))
				local choice = select(locale_quest(9978), locale_quest(9979), locale_quest(2426))
				if choice == 3 then
					return
				elseif choice == 1 then
					local option_select = select(locale_quest(9980), locale_quest(9981), locale_quest(9982), locale_quest(9983), locale_quest(2426))
					local information = {}
					if option_select == 6 then
						return
					end
					if option_select == 1 then
						if pc.count_item(38100) >= 1 then
							information = { 86400 * 7, 38100 }
						else
							say_npc()
							say(locale_quest(9984))
							return
						end
					elseif option_select == 2 then
						if pc.count_item(38101) >= 1 then
							information = { 86400 * 15, 38101 }
						else
							say_npc()
							say(locale_quest(9984))
							return
						end
					elseif option_select == 3 then
						if pc.count_item(38102) >= 1 then
							information = { 86400 * 30, 38102 }
						else
							say_npc()
							say(locale_quest(9984))
							return
						end
					elseif option_select == 4 then
						if pc.count_item(38103) >= 1 and pc.get_gold() >= 200000 then
							information = { 86400 * 1, 38103 }
						else
							say_npc()
							say(locale_quest(9984))
							return
						end
					else
						return
					end

					local remain_time = item.get_socket(0)
					item.set_socket(0, remain_time + information[1])
					pc.remove_item(information[2], 1)
					if option_select == 4 then
						pc.change_gold(-200000)
					end
					return
				end
			end

			if training_mount.check_list(50067, 25, 11) == 1 then
				say_npc()
				say(locale_quest(9963))
				wait()
				say_npc()
				say(locale_quest(9965))
				local remain_time = item.get_socket(0)
				local old_vnum = item.get_vnum()
				local new_vnum = item.get_vnum() + 5
				local extra = training_mount.extraTime(1)
				pc.give_item2_select(new_vnum, 1)
				item.set_socket(0, remain_time + extra)
				pc.remove_item(old_vnum, 1)
				pc.remove_item(50067, 1)
			end
		end

