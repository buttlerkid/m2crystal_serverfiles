define HUNTED_METEORITE_AMOUNT_FLAG "hunted_meteorites" -- Quest flag name for the hunted meteorite amount
define METEORITE_VNUM 8115 -- Meteorite VNUM
define METEORITE_HUNT_AMOUNT 1 -- Amount of meteorite to hunt (one)
define FRAGMENT_VNUM 31094 -- Fragment VNUM
define MYONGHORANG_VNUM 20400 -- Myonghorang (Lycan NPC) VNUM
define EXP_AMOUNT_REWARD 450 -- Amount of received exp upon quest completion
define ITEM_ONE_REWARD 27001 -- ITEM_ONE (Red Potions (s)) received upon quest completion
define ITEM_ONE_REWARD_AMOUNT 10 -- Amount (x10) of received ITEM_ONE upon quest completion
define METEORITE_HUNT_AMOUNT_SECOND 1 -- Amount of meteorite to hunt in the next quest (The Metin Stone) (one)

quest meteorite_hunt begin
	state start begin end
	state trigger begin
		when enter begin
			pc.setqf(HUNTED_METEORITE_AMOUNT_FLAG, 0)
		end

		when letter begin
			send_letter(locale_quest(6381))
			q.set_counter_name(locale_quest(6413))
			meteorite_hunt.meteorite_hunt_kill_count()
		end

		when button or info begin
			say_title(locale_quest(6381))
			say(locale_quest(6382))
		end

		when METEORITE_VNUM.kill begin
			local kill_count = pc.getqf(HUNTED_METEORITE_AMOUNT_FLAG)
			pc.setqf(HUNTED_METEORITE_AMOUNT_FLAG, kill_count + 1)
			pc.give_item2(FRAGMENT_VNUM)
			meteorite_hunt.meteorite_hunt_kill_count()
		end

		function meteorite_hunt_kill_count()
			local total_remaining = 0
			local current_remaining = METEORITE_HUNT_AMOUNT - pc.getqf(HUNTED_METEORITE_AMOUNT_FLAG)

			if current_remaining < 0 then
				current_remaining = 0
			end

			total_remaining = total_remaining + current_remaining
			q.set_counter_value(total_remaining)
			if total_remaining == 0 then
				notice_multiline(locale_quest(6385), notice)
				set_state("back_to_myonghorang")
			end
		end

		when leave begin
			pc.setqf(HUNTED_METEORITE_AMOUNT_FLAG, 0)
			q.done()
		end
	end

	state back_to_myonghorang begin
		when letter begin
			send_letter(locale_quest(6388))
			local v = find_npc_by_vnum(MYONGHORANG_VNUM)
			if 0 ~= v then
				target.vid("__TARGET__", v, locale_quest(6388))
			end
		end

		when button or info begin
			say_title(locale_quest(6388))
			say(locale_quest(6385))
		end

		when __TARGET__.target.click or MYONGHORANG_VNUM.chat.locale_quest(6388) begin
			target.delete("__TARGET__")
			clear_letter()

			say_title(mob_name(MYONGHORANG_VNUM))
			say()
			say(locale_quest(6396))
			say_reward(string.format(locale_quest(5043), item_name(ITEM_ONE_REWARD), ITEM_ONE_REWARD_AMOUNT))
			say_reward(string.format(locale_quest(6882), EXP_AMOUNT_REWARD))
			say()
			pc.give_exp2(EXP_AMOUNT_REWARD)
			pc.give_item2(ITEM_ONE_REWARD, ITEM_ONE_REWARD_AMOUNT)
			wait()
			say_title(mob_name(MYONGHORANG_VNUM))
			say()
			say(string.format(locale_quest(6391), METEORITE_HUNT_AMOUNT_SECOND))
			set_state(__COMPLETE__)
			set_quest_state("the_metin_stone", "trigger")
		end
	end

	state __COMPLETE__ begin
	end
end
