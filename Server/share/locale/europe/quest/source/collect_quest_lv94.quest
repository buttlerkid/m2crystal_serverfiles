quest collect_quest_lv94 begin
	state start begin
	end

	state run begin
		when login or levelup with pc.get_level() >= 94 begin
			set_state(information)
		end
	end

	state information begin
		when letter begin
			local v = find_npc_by_vnum(20091)
			if v != 0 then
				target.vid("__TARGET__", v, locale_quest(642))
			end
			send_letter(locale_quest(643))
		end

		when button or info begin
			say_title(locale_quest(643))
			say(locale_quest(644))
		end

		when __TARGET__.target.click or 20091.chat.locale_quest(645) begin
			target.delete("__TARGET__")
			say_title(locale_quest(646))
			say(locale_quest(647))
			wait()
			say_title(locale_quest(646))
			say(locale_quest(648))
			set_state(go_to_disciple)
			pc.setqf("duration", 0)
			pc.setqf("collect_count", 0)
			--pc.setqf("drink_drug", 0)
		end
	end

	state go_to_disciple begin
		when letter begin
			send_letter(locale_quest(649))
		end

		when button or info begin
			say_title(locale_quest(649))
			say(locale_quest(650))
			say_item_vnum(30252)
			say_reward(string.format(locale_quest(651), pc.getqf("collect_count")))
		end

		--[[
		when 71035.use begin
			if get_time() < pc.getqf("duration") then
				say(locale_quest(652))
				return
			end

			if pc.getqf("drink_drug") == 1 then
				say(locale_quest(653))
				return
			end

			if pc.count_item(30252) == 0 then
				say(locale_quest(654))
				return
			end

			pc.remove_item(71035, 1)
			pc.setqf("drink_drug", 1)
		end
		]]

		when 2402.kill or 2403.kill begin
			local s = number(1, 300)
			if s <= 1 then
				pc.give_item2(30252, 1)
				send_letter(locale_quest(655))
			end
		end

		when 20091.chat.locale_quest(656) with pc.count_item(30252) > 0 begin
			if get_time() < pc.getqf("duration") then
				say_title(locale_quest(646))
				say(locale_quest(657))
				return
			end

			if pc.count_item(30252) <= 0 then
				say_title(locale_quest(646))
				say(locale_quest(658))
				return
			end

			say_title(locale_quest(646))
			say(locale_quest(659))
			pc.remove_item(30252, 1)

			if is_test_server() then
				pc.setqf("duration", (get_time() + 3)) -- Test Server 3 seconds
			else
				pc.setqf("duration", (get_time() + (60 * 60 * 12))) -- 12 hours
			end

			wait()

			local pass_percent
			--if pc.getqf("drink_drug") == 0 then
			if affect.get_apply_value(400) == nil then
				pass_percent = 10
			else
				pass_percent = 60
			end

			test_chat(string.format("pass percent %d", pass_percent))

			local s = number(1, 100)
			if s <= pass_percent then
				local collect_count = pc.getqf("collect_count")
				pc.setqf("collect_count", collect_count + 1)
				--pc.setqf("drink_drug", 0)
				affect.remove(400)

				if collect_count < 19 then
					say_title(locale_quest(646))
					say(locale_quest(660))
					say(string.format(locale_quest(661), (20 - pc.getqf("collect_count"))))
					say(locale_quest(662))
				else
					pc.setqf("duration", 0)

					say_title(locale_quest(646))
					say(locale_quest(667))

					local s = select(locale_quest(663), locale_quest(664), locale_quest(665))

					if 1 == s then
						affect.add_collect(1, 1100, (60 * 60 * 24 * 365 * 60)) -- hp index == 1, hp +1000
						pc.setqf("reward", 1)
					elseif 2 == s then
						affect.add_collect(apply.DEF_GRADE_BONUS, 140, (60 * 60 * 24 * 365 * 60))
						pc.setqf("reward", 2)
					elseif 3 == s then
						affect.add_collect(apply.ATT_GRADE_BONUS, 60, (60 * 60 * 24 * 365 * 60))
						pc.setqf("reward", 3)
					end

					clear_letter()
					set_quest_state("collect_quest_lv96", "run")
					set_state(__complete)
				end

				return
			else
				say_title(locale_quest(646))
				say(locale_quest(666))
				--pc.setqf("drink_drug", 0)
				affect.remove(400)
				return
			end
		end
	end

	state __complete begin
	end
end
